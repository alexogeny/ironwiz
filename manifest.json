{
  "manifest_version": 2,
  "name": "IronWiz",
  "version": "0.0.1-alpha",
  "permissions": [
    "storage",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "*://ironwoodrpg.com/*",
    "*://api.ironwoodrpg.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://ironwoodrpg.com/*", "*://api.ironwoodrpg.com/*"],
      "js": ["dist/content.js"]
    }
  ],
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
